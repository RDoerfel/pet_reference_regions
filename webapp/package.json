{
  "name": "pet-reference-regions-webapp",
  "version": "1.0.0",
  "description": "WebAssembly neuroimaging application for creating PET reference regions from brain segmentations",
  "main": "js/app.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint js/*.js",
    "lint:fix": "eslint js/*.js --fix",
    "serve": "python -m http.server 8000",
    "serve:node": "npx http-server . -p 8000 -c-1",
    "build": "echo 'No build step required for static webapp'",
    "validate": "node scripts/validate-webapp.js"
  },
  "keywords": [
    "neuroimaging",
    "pet",
    "reference-regions",
    "webassembly",
    "pyodide",
    "nifti",
    "brain-imaging"
  ],
  "author": "RDoerfel <doerfelruben@aol.com>",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "testTimeout": 10000
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "globals": {
      "loadPyodide": "readonly",
      "PyodideBridge": "readonly",
      "NiftiVisualization": "readonly",
      "PETRefRegionApp": "readonly"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}